{
  "name": "markethub-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/markethub-api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/product-catalog/test/jest-e2e.json && jest --config ./apps/order/test/jest-e2e.json && jest --config ./apps/payment/test/jest-e2e.json",
    "test:e2e:products": "jest --config ./apps/product-catalog/test/jest-e2e.json",
    "test:e2e:orders": "jest --config ./apps/order/test/jest-e2e.json",
    "test:e2e:payments": "jest --config ./apps/payment/test/jest-e2e.json",
    "start:all": "concurrently -n gw,prod,ord,pay,notif -c blue,green,yellow,magenta,cyan \"nest start --watch gateway\" \"nest start --watch product-catalog\" \"nest start --watch order\" \"nest start --watch payment\" \"nest start --watch notification\""
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^7.1.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.14",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/websockets": "^11.1.14",
    "@prisma/client": "^6.19.2",
    "amqplib": "^0.10.9",
    "axios": "^1.13.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.15.1",
    "jwks-rsa": "^4.0.0",
    "nestjs-pino": "^4.6.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "prisma": "^6.19.2",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.9.3",
    "rxjs": "^7.8.1",
    "stripe": "^20.4.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/amqplib": "^0.10.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@markethub/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@markethub/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@markethub/messaging(|/.*)$": "<rootDir>/libs/messaging/src/$1",
      "^@markethub/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@prisma/client/product-catalog$": "<rootDir>/generated/prisma/product-catalog",
      "^@prisma/client/order$": "<rootDir>/generated/prisma/order",
      "^@prisma/client/payment$": "<rootDir>/generated/prisma/payment"
    }
  }
}
